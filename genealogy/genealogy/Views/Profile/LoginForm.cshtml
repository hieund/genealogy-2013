@model genealogy.Models.UserModels
@{
    ViewBag.Title = "AccountInfo";
}
@if (string.IsNullOrEmpty(Model.FullName))
{
    <form id="formlogin" method="post" enctype="multipart/form-data">
        <div class="box">
            <div class="box-heading">
                Đăng nhập
            </div>
            <div class="box-content">
                @Html.TextBoxFor(m => m.Email)
                @Html.PasswordFor(m => m.Password)
                @if (ViewBag.Error == 1)
                {
                    <p class="red">Email hoặc mật khẩu không đúng</p>
                }
                <input type="submit" class="button" value="Đăng nhập" />
                <a class="forgot">Quên mật khẩu</a>
            </div>
        </div>
    </form>
}
else
{
    <div class="box">
        <div class="box-heading">
            Thông tin tài khoản
        </div>
        <div class="box-content">
            @if (Model.IsAdmin)
            {
                <p><a href="/quan-tri">Quản trị nội dung</a></p>
            }
            <img src="@genealogy.business.DataHelper.GenImageAvatar(Model.UserID, Model.Avatar)"/>
            <p><a href="/thong-tin-user">@Model.FullName</a></p>
            <p><a class="button" href="/dang-xuat"><span>Thoát</span></a></p>

        </div>
    </div>
}
<div class="clr"></div>
