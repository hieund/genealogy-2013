<script type="text/javascript" src="/Scripts/bootstrap/bootstrap.min.js"></script>
<script type="text/javascript" src="/Scripts/upload/jquery.matrixMultiFileUpload.js"></script>
<div class="content-other">
    <div class="breadcrumb">
        <a href="/">Trang chủ</a><a href="/tai-khoan-user" class="active">Thông tin tài khoản</a>
    </div>
    <div class="taikhoan">
        <form enctype="multipart/form-data" method="post">
            <table class="TableForm">
                <tbody>
                    <tr>
                        <th></th>
                        <td>
                            <script type="text/javascript">
                                $(function () {
                                    // Add the uploader
                                    $('#upload').matrixMultiFileUpload({
                                        assetBuilderId: '1',// Asset ID of the Asset Builder that will create the file
                                        assetBuilderUrl: 'Image/Avatar',// Asset Builder URL
                                        swfUrl: 'Scripts/upload',// URL to SWFUpload file
                                        buttonImageUrl: 'Scripts/upload',// URL to the upload button image
                                        assetType: 'pdf_file'// Optional parameter for file type, defaults to image
                                    });

                                });
                            </script>
                            <div id="upload"></div>
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>

                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-preview thumbnail" style="width: 200px; height: 150px;"></div>
                                <div>
                                    <span class="btn btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><input type="file" /></span>
                                    <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>
                            @Html.TextBoxFor(model => model.Email) <span class="required">*</span>
                            @Html.ValidationMessage("Email")
                        </td>
                    </tr>
                    <tr>
                        <th>Điện thoại</th>
                        <td>
                            @Html.TextBoxFor(model => model.Mobile) <span class="required">*</span>
                        </td>
                    </tr>
                    <tr>
                        <th>Họ tên đệm </th>
                        <td>
                            @Html.TextBoxFor(model => model.FirstName) <span class="required">*</span>
                            @Html.ValidationMessage("FirstName")


                        </td>
                    </tr>
                    <tr>
                        <th>Tên</th>
                        <td>
                            @Html.TextBoxFor(model => model.LastName) <span class="required">*</span>
                            @Html.ValidationMessage("LastName")

                        </td>
                    </tr>
                    <tr>
                        <th>Ngày sinh</th>
                        <td>
                            @Html.TextBoxFor(model => model.Birthday) <span class="required">*</span>
                            @Html.ValidationMessage("Birthday")
                        </td>
                    </tr>
                    <tr>
                        <th>Nơi sinh</th>
                        <td>
                            @Html.TextBoxFor(model => model.BirthPlace) <span class="required">*</span>
                            @Html.ValidationMessage("BirthPlace")
                        </td>
                    </tr>
                    <tr>
                        <th>Tỉnh/Thành phố sinh</th>
                        <td>
                            @Html.DropDownList("SelectProvinceBirth", ViewBag.SelectProvinceBirth as SelectList)
                        </td>
                    </tr>
                    <tr>
                        <th>Giới tính</th>
                        <td>
                            <input type="radio" checked="checked" id="male" name="gender" class="left" value="1" />
                            <label class="left" for="male">
                                Nam
                            </label>
                            <input type="radio" id="female" name="gender" class="left" value="0" />
                            <label class="left" for="female">
                                Nữ
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <th>Trạng thái hôn nhân</th>
                        <td>
                            <input type="radio" checked="checked" id="single" name="status" class="left" value="1" />
                            <label class="left" for="single">
                                Độc thân
                            </label>
                            <input type="radio" id="married" name="status" class="left" value="0" />
                            <label class="left" for="married">
                                Kết hôn
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <th>Địa chỉ hiện tại</th>
                        <td>
                            @Html.TextBoxFor(model => model.CurrentPlace)
                        </td>
                    </tr>
                    <tr>
                        <th>Tỉnh/Thành phố hiện tại</th>
                        <td>
                            @Html.DropDownList("SelectProvinceCurrent", ViewBag.SelectProvinceCurrent as SelectList)
                        </td>
                    </tr>

                    <tr>
                        <th>Ngày mất</th>
                        <td>
                            @Html.TextBoxFor(model => model.DeathDate)
                        </td>
                    </tr>
                    <tr>
                        <th>Mật khẩu</th>
                        <td>
                            @Html.Password("Password", Model.Password)
                            @Html.ValidationMessage("Password")
                        </td>
                    </tr>
                    <tr>
                        <th>Xác nhận mật khẩu</th>
                        <td>
                            @Html.Password("ConfirmPassword", Model.ConfirmPassword)
                            @Html.ValidationMessage("ConfirmPassword")
                        </td>
                    </tr>
                    <tr>
                        <th></th>
                        <td>
                            <button type="submit" class="button">Đăng ký</button>
                            <a href="/" class="button"><span>Bỏ qua</span></a>
                        </td>
                    </tr>

                </tbody>
            </table>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Birthday').datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+0",
            showOn: "both",
            buttonImage: "Content/images/calendar.gif",
            buttonImageOnly: true
        })
        $('#DeathDate').datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-50:+0",
            showOn: "both",
            buttonImage: "Content/images/calendar.gif",
            buttonImageOnly: true
        })
    })
</script>
