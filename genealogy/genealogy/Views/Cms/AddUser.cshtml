<link rel="stylesheet" href="@Url.Content("~/Content/themes/jquery-ui/jquery.ui.theme.css")" media="screen" type="text/css" />
<link rel="stylesheet" href="@Url.Content("~/Content/themes/jquery-ui/jquery.ui.datepicker.css")" media="screen" type="text/css" />

<br />
<ul class="nav nav-tabs" id="myTab">
    <li class="active"><a href="#profileinfo">Thông tin thành viên</a></li>
    <li><a href="#profilerelation">Thông tin quan hệ</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="profileinfo">
        <form enctype="multipart/form-data" method="post">
            <table class="TableForm">
                <tbody>
                    <tr>
                        <td>
                            <table>
                                <tr>
                                    <th>Họ tên đệm </th>
                                    <td>
                                        @Html.TextBoxFor(model => model.FirstName)
                                        @Html.ValidationMessage("FirstName")
                                    </td>
                                </tr>

                                <tr>
                                    <th>Ngày sinh</th>
                                    <td>
                                        @Html.TextBoxFor(model => model.Birthday)
                                        @Html.ValidationMessage("Birthday")
                                    </td>
                                </tr>

                                <tr>
                                    <th>Tỉnh/Thành phố sinh</th>
                                    <td>
                                        @Html.DropDownList("SelectProvinceBirth", ViewBag.SelectProvinceBirth as SelectList)
                                    </td>
                                </tr>

                                <tr>
                                    <th>Tỉnh/Thành phố hiện tại</th>
                                    <td>
                                        @Html.DropDownList("SelectProvinceCurrent", ViewBag.SelectProvinceCurrent as SelectList)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Điện thoại</th>
                                    <td>
                                        @Html.TextBoxFor(model => model.Mobile)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Trạng thái hôn nhân</th>
                                    <td>
                                        <table>
                                            <tr>
                                                <td>
                                                    <input type="radio" checked="checked" id="single" name="status" value="1" />
                                                    Độc thân
                                                </td>
                                                <td>
                                                    <input type="radio" id="married" name="status" value="0" />
                                                    Kết hôn
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>


                            </table>
                        </td>
                        <td>
                            <table>
                                <tr>
                                    <th>Tên</th>
                                    <td>
                                        @Html.TextBoxFor(model => model.LastName)
                                        @Html.ValidationMessage("LastName")

                                    </td>
                                </tr>



                                <tr>
                                    <th>Nơi sinh</th>
                                    <td>
                                        @Html.TextBoxFor(model => model.BirthPlace)
                                        @Html.ValidationMessage("BirthPlace")
                                    </td>
                                </tr>
                                <tr>
                                    <th>Địa chỉ hiện tại</th>
                                    <td>
                                        @Html.TextBoxFor(model => model.CurrentPlace)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>
                                        @Html.TextBoxFor(model => model.Email)
                                        @Html.ValidationMessage("Email")
                                    </td>
                                </tr>

                                <tr>
                                    <th>Giới tính</th>
                                    <td>
                                        <table>
                                            <tr>
                                                <td>
                                                    <input type="radio" checked="checked" id="male" name="gender" class="left" value="1" />
                                                    Nam</td>
                                                <td>
                                                    <input type="radio" id="female" name="gender" class="left" value="0" />
                                                    Nữ</td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>



                                <tr>
                                    <th>Ngày mất</th>
                                    <td>
                                        @Html.TextBoxFor(model => model.DeathDate)
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    @*<tr>
                        <th>Mật khẩu</th>
                        <td>
                            @Html.Password("Password", Model.Password)
                            @Html.ValidationMessage("Password")
                        </td>
                    </tr>
                    <tr>
                        <th>Xác nhận mật khẩu</th>
                        <td>
                            @Html.Password("ConfirmPassword", Model.ConfirmPassword)
                            @Html.ValidationMessage("ConfirmPassword")
                        </td>
                    </tr>*@
                    <tr>

                        <td colspan="4">
                            <button type="submit" class="button">Đăng ký</button>
                            <a href="/" class="button"><span>Bỏ qua</span></a>
                        </td>
                    </tr>
                </tbody>
            </table>

        </form>
    </div>
    <div class="tab-pane" id="profilerelation">...</div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#Birthday').datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+0",
            showOn: "both",
            buttonImage: "/Content/images/calendar.gif",
            buttonImageOnly: true
        })
        $('#DeathDate').datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-50:+0",
            showOn: "both",
            buttonImage: "/Content/images/calendar.gif",
            buttonImageOnly: true
        })
    })
    $('#myTab a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>

