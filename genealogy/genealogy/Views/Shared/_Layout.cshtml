<!DOCTYPE html>
<html lang="en">
<head>
    @if (IsSectionDefined("INC_META"))
    {
        @RenderSection("INC_META")
    }
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <style type="text/css">
        #featured .ui-tabs-panel .info {
            display: none;
        }
    </style>
    <!--css-->
    <link rel="stylesheet" href="/Content/themes/css/style.css" type="text/css" />
    <link rel="stylesheet" href="/Content/themes/css/style_slide.css" type="text/css" />
    <link rel="stylesheet" href="/Content/themes/css/jquery-ui.css" type="text/css" />
    <link rel="stylesheet" href="/Content/themes/css/default/default.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="/Content/themes/dropmenu/ddsmoothmenu.css" type="text/css" />
    <link rel="stylesheet" href="/Content/themes/css/carousel.css" media="screen" type="text/css" />

    <!--jacascript-->
    <script type="text/javascript" src="/Scripts/base/jquery-1.8.2.min.js"></script>  
    <script type="text/javascript" src="/Scripts/jquery-ui-1.7.2.custom.min.js"></script>
    <script src="@Url.Content("~/Scripts/base/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="/Scripts/base/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/Scripts/base/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="/Scripts/tiny_mce/tiny_mce.js"></script>
    <script type="text/javascript" src="/Scripts/fck-filemanager-browse.js"></script>
    <script type="text/javascript" src="/Scripts/ddsmoothmenu.js"></script>
    <script type="text/javascript" src="/Scripts/init.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.myjcarousel.js"></script>
    
    <script type="text/javascript" src="/Scripts/site/js.common.js"></script>

</head>
<body class="t-rtl">
    <div class="frame_page">
        <div class="page">
            <div class="header">
                @Html.Action("Header", "Common")
            </div>
            <div class="container">
                <div class="content">
                    @RenderBody()
                </div>
                <div class="column-right">
                    <!-- video -->
                    @Html.Action("VideoBox", "Video")
                    <!-- login -->
                    @Html.Action("LoginForm", "Profile")
                    <!-- support -->
                    @Html.Action("Support", "Common")
                    <!-- link -->
                    @Html.Action("Comment", "Common")
                    <!-- comment -->
                    @Html.Action("Link", "Common")
                </div>
                <div class="footer">
                    @Html.Action("Footer", "Common")
                </div>
            </div>

        </div>
    </div>
</body>
<div style="position: fixed; top: 5px; left: 45%; padding: 4px 15px; background: #FFC; color: Black; border: 1px solid #FFCC35; border-radius: 5px; display: none; z-index: 99999;"
    id="loading">
    Đang tải dữ liệu...
</div>
<script type="text/javascript">
    $(function () {
        $("#tabs_chuyenmuc").tabs();
        $("#tabs_chuyenmuc2").tabs();
    });

    $('.image-additional .jcarousel-skin-opencart').myjcarousel({
        vertical: false,
        visible: 4,
        scroll: 1,
        contentWidth: 624
    });
    $('.video-additional .jcarousel-skin-opencart').myjcarousel({
        vertical: false,
        visible: 3,
        scroll: 1,
        contentWidth: 297
    });
</script>

</html>
