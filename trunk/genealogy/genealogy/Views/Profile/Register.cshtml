@model genealogy.Models.UserModels
<div class="content-other">
    <div class="breadcrumb">
        <a href="/">Trang chủ</a><a href="/tai-khoan-dang-ky" class="active">Đăng ký tài khoản</a>
    </div>
    <div class="taikhoan">
        @using (Ajax.BeginForm("Register", "Profile", null, new AjaxOptions() { HttpMethod = "POST", OnBegin = "$('#loading').text('Đang gửi thông tin...').show();" }, new { enctype = "multipart/form-data" }))
        {
            <table class="TableForm">
                <tbody>
                    @if (ViewBag.Result == 1)
                    {
                        <tr>
                            <td colspan="2" align="center">
                                <h2 style="color: green; text-align: center;">Thêm mới thành công.</h2>
                            </td>
                        </tr>
                    }
@*  <tr>
                        <th></th>
                        @if (string.IsNullOrEmpty(Model.Avatar))
                        {
                            <td style="text-align: center">
                                <img src="/Content/themes/images/default.gif" alt=""><br />
                                <input type="file" name="fulavatar">
                            </td>
                        }
                        else
                        {
                            <td style="text-align: center">
                                <img src="@DataHelper.GenImageAvatar(Model.UserID, Model.Avatar)" alt=""><br />
                                <input type="file" name="" name="fulavatar">
                            </td>
                        }
                    </tr>*@
                    <tr>
                        <th>Email</th>
                        <td>
                            @Html.TextBoxFor(model => model.Email) <span class="required">*</span>
                            @Html.ValidationMessageFor(n => n.Email)
                        </td>
                    </tr>
                    <tr>
                        <th>Điện thoại</th>
                        <td>
                            @Html.TextBoxFor(model => model.Mobile) <span class="required">*</span>
                            @Html.ValidationMessageFor(n => n.Mobile)
                        </td>
                    </tr>
                    <tr>
                        <th>Mật khẩu</th>
                        <td>
                            @Html.PasswordFor(model => model.Password) <span class="required">*</span>
                            @Html.ValidationMessageFor(n => n.Password)
                        </td>
                    </tr>
                    <tr>
                        <th>Xác nhận mật khẩu</th>
                        <td>
                            @Html.PasswordFor(model => model.ConfirmPassword) <span class="required">*</span>
                            @Html.ValidationMessageFor(n => n.ConfirmPassword)
                        </td>
                    </tr>
                    <tr>
                        <th>Họ tên đệm </th>
                        <td>
                            @Html.TextBoxFor(model => model.FirstName) <span class="required">*</span>
                            @Html.ValidationMessageFor(n => n.FirstName)


                        </td>
                    </tr>
                    <tr>
                        <th>Tên</th>
                        <td>
                            @Html.TextBoxFor(model => model.LastName) <span class="required">*</span>
                            @Html.ValidationMessageFor(n => n.LastName)

                        </td>
                    </tr>
                    <tr>
                        <th>Giới tính</th>
                        <td>
                            <input type="radio" checked="checked" id="male" name="Gender" class="left" value="1" />
                            <label class="left" for="male">
                                Nam
                            </label>
                            <input type="radio" id="female" name="Gender" class="left" value="0" />
                            <label class="left" for="female">
                                Nữ
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <th>Trạng thái hôn nhân</th>
                        <td>
                            <input type="radio" checked="checked" id="single" name="Status" class="left" value="1" />
                            <label class="left" for="single">
                                Độc thân
                            </label>
                            <input type="radio" id="married" name="Status" class="left" value="0" />
                            <label class="left" for="married">
                                Kết hôn
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <th>Ngày sinh</th>
                        <td>
                            @Html.TextBoxFor(model => model.Birthday, new { id = "Birthday" }) <span class="required">*</span>
                            @Html.ValidationMessageFor(n => n.Birthday)
                        </td>
                    </tr>
                    <tr>
                        <th>Nơi sinh</th>
                        <td>
                            @Html.TextBoxFor(model => model.BirthPlace) <span class="required">*</span>
                            @Html.ValidationMessageFor(n => n.BirthPlace)
                        </td>
                    </tr>
                    <tr>
                        <th>Tỉnh/Thành phố sinh</th>
                        <td>
                            @Html.DropDownList("BirthProvinceID", "-- Please select --")
                        </td>
                    </tr>

                    <tr>
                        <th>Địa chỉ hiện tại</th>
                        <td>
                            @Html.TextBoxFor(model => model.CurrentPlace)
                        </td>
                    </tr>
                    <tr>
                        <th>Tỉnh/Thành phố hiện tại</th>
                        <td>
                            @Html.DropDownList("CurrentProvinceID", "-- Please select --")
                        </td>
                    </tr>

                    <tr>
                        <th></th>
                        <td>

                            <button type="submit" class="button">Đăng ký</button>
                            <a href="/" class="button"><span>Bỏ qua</span></a>
                        </td>
                    </tr>

                </tbody>
            </table>
                    if (ViewBag.Result == 1)
                    {
            <script type="text/javascript"> cleardata();</script>
                    }
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Birthday').datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+0",
            showOn: "both",
            buttonImage: "Content/images/calendar.gif",
            buttonImageOnly: true
        });



    });
</script>
