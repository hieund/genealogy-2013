@model List<genealogy.business.Base.GENNewsCategories>
<table style="color: Black; font-size: 10pt;" class="table  table-striped">
    <tbody>
        <tr>
            <td>Mã danh mục
            </td>
            <td>Tên danh mục
            </td>
            <td>Mô tả ngắn
            </td>
        </tr>
        @if (Model != null && Model.Count > 0)
        {
            foreach (genealogy.business.Base.GENNewsCategories item in Model)
            {
                string strID = item.NewsCategoryID + "Item";
            <tr id="@strID">
                <td>@Html.ActionLink(item.NewsCategoryID.ToString(), "NewsCategoryEdit", new { id = item.NewsCategoryID }, new { @class = "a" })</td>
                <td>
                    @Html.ActionLink(item.NewsCategoryName, "NewsCategoryEdit", new { id = item.NewsCategoryID }, new { @class = "a" })
                </td>
                <td>
                    @item.NewsCategoryShortName
                </td>
            </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Khong tim thay ket qua</td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.page != null)
{
    <script type="text/javascript">
        var CurrentPage = @ViewBag.CurrentPage;
        createPagingReport(Math.ceil(parseInt('@ViewBag.page') / 10), 'pagingReport');    
    </script>
}