@model genealogy.Models.AlbumDetailModels
@{
    ViewBag.Title = "AlbumDetailEdit";
    Layout = "~/Views/Shared/_LayoutCms.cshtml";
}

<header>
    @if (Convert.ToInt32(ViewBag.AlbumDetailID) == 0)
    {
        <h3>Thêm mới Video</h3>
    }
    else
    {
        <h3>Cập nhật Video</h3>
    }
</header>
<form method="post" class="form-horizontal" id="formdata" enctype="multipart/form-data">
    <div class="control-group">
        @if (ViewBag.Result != null)
        {
            <div class="alert alert-success fade in">
                <button type="button" class="close" data-dismiss="alert">×</button>
                @Html.Raw(ViewBag.Result)
            </div>
        }
        <label class="control-label" for="inputEmail">Tên Video:</label>
        <div class="controls">
            @Html.Hidden("AlbumDetailID", Model.AlbumDetailID)
            @Html.TextBox("AlbumDetailName", Model.AlbumDetailName, new { @class = "input-xxlarge", id = "inputAlbumDetailName", placeholder = "Tên Video" })

            <span class="error">*</span>
            @*@Html.ValidationMessage("NewsCategoryName", "", new { @class = "help-inline" })*@

        </div>
    </div>
    @*  <div class="control-group">
        <label class="control-label" for="inputPassword">Loại Video:</label>
        <div class="controls">
            @Html.DropDownList("SelectAlbumDetailType")
        </div>
    </div>*@
    <div class="control-group">
        <label class="control-label" for="inputEmail">Hình thumnail</label>
        <div class="controls">
            @Html.Action("UploadThumnailVideo", "Cms")
            @Html.Hidden("AlbumDetailImage")
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputEmail">Link Youtube</label>
        <div class="controls">
            @Html.TextBox("URL", Model.URL, new { @class = "input-xxlarge", placeholder = "Link Youtube" })
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputEmail">Frame Youtube</label>
        <div class="controls">
            @* @{
                Html.Telerik().Editor()
                .Name("ContentFrame")
                .Encode(false)
                .HtmlAttributes(new { style = "width:600px; hieght:300px;" })
                .Render();
            }*@

            @Html.TextArea("ContentFrame", Model.ContentFrame, new { cols = "30", rows = "10", name = "ContentFrame", id = "ContentFrame", style = "min-height:500px;" })
            @*@Html.TextArea("ContentFrame", Model.ContentFrame, new { @class = "input-xxlarge", id = "inputContentFrame", placeholder = "Frame Youtube" })*@
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputEmail">Thứ tự hiển thị</label>
        <div class="controls">
            @Html.TextBox("OrderIndex", Model.OrderIndex, new { @class = "input-xxlarge", id = "inputOrderIndex", placeholder = "Thứ tự hiển thị" })
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            @if (Convert.ToInt32(ViewBag.AlbumDetailID) == 0)
            {
                <button type="submit" class="btn btn-primary">Thêm mới</button>
                @Html.ActionLink("Quay về", "AlbumlListVideo", "Cms", new { @class = "btn" })
            }
            else
            {
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                @Html.ActionLink("Quay về", "AlbumListVideo", "Cms", new { @class = "btn" })
            }
        </div>
    </div>
</form>
